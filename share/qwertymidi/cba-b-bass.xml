<?xml version="1.0"?>

<!--
B system chromatic button accordion free bass (isomorphic -3/-1).
-->

<qwertymidi>

<map key="escape" action="exit" />
<map key="f1" action="stay-down-octave" />
<map key="f2" action="stay-up-octave" />
<map key="f3" action="stay-down-note" />
<map key="f4" action="stay-up-note" />
<map key="shift" action="shift-up-octave" />
<map key="control" action="shift-down-octave" />
<map key="space" action="panic" />

<map key="2" action="G#4" />
<map key="3" action="F4" />
<map key="4" action="D4" />
<map key="5" action="B3" />
<map key="6" action="G#3" />
<map key="7" action="F3" />
<map key="8" action="D3" />
<map key="9" action="B2" />
<map key="0" action="G#2" />
<map key="minus" action="F2" />
<map key="equals" action="D2" />
<map key="backspace" action="B1" />

<map key="Q" action="A4" />
<map key="W" action="F#4" />
<map key="E" action="D#4" />
<map key="R" action="C4" />
<map key="T" action="A3" />
<map key="Y" action="F#3" />
<map key="U" action="D#3" />
<map key="I" action="C3" />
<map key="O" action="A2" />
<map key="P" action="F#2" />
<map key="open-bracket" action="D#2" />
<map key="close-bracket" action="C2" />
<map key="backslash" action="" />

<map key="A" action="G4" />
<map key="S" action="E4" />
<map key="D" action="C#4" />
<map key="F" action="A#3" />
<map key="G" action="G3" />
<map key="H" action="E3" />
<map key="J" action="C#3" />
<map key="K" action="A#2" />
<map key="L" action="G2" />
<map key="semicolon" action="E2" />
<map key="single-quote" action="C#2" />

<map key="Z" action="F4" />
<map key="X" action="D4" />
<map key="C" action="B3" />
<map key="V" action="G#3" />
<map key="B" action="F3" />
<map key="N" action="D3" />
<map key="M" action="B2" />
<map key="comma" action="G#2" />
<map key="period" action="F2" />
<map key="slash" action="D2" />

</qwertymidi>
