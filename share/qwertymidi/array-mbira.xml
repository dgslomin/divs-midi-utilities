<?xml version="1.0"?>

<!--
Array mbira.  Two interwoven isomorphic 2E/12NW layouts in which you skip a key
as you move to the east.  The layout which includes G is offset from the layout
which includes C by 7E, which means that the combined layout isn't completely
isomorphic; playing in a root position of G requires slightly different
fingering than a root position of C.  That said, it's surprisingly intuitive.
-->

<qwertymidi>

<map key="escape" action="exit" />
<map key="f1" action="stay-down-octave" />
<map key="f2" action="stay-up-octave" />
<map key="f3" action="stay-down-note" />
<map key="f4" action="stay-up-note" />
<map key="space" action="shift-up-octave" />

<map key="backtick" action="Ab4" />
<map key="1" action="Eb5" />
<map key="2" action="Bb4" />
<map key="3" action="F5" />
<map key="4" action="C5" />
<map key="5" action="G5" />
<map key="6" action="D5" />
<map key="7" action="A5" />
<map key="8" action="E5" />
<map key="9" action="B5" />
<map key="0" action="F#5" />
<map key="minus" action="C#6" />
<map key="equals" action="G#5" />
<map key="backspace" action="D#6" />

<map key="tab" action="Ab3" />
<map key="Q" action="Eb4" />
<map key="W" action="Bb3" />
<map key="E" action="F4" />
<map key="R" action="C4" />
<map key="T" action="G4" />
<map key="Y" action="D4" />
<map key="U" action="A4" />
<map key="I" action="E4" />
<map key="O" action="B4" />
<map key="P" action="F#4" />
<map key="open-bracket" action="C#5" />
<map key="close-bracket" action="G#4" />
<map key="backslash" action="D#5" />

<map key="A" action="Eb3" />
<map key="S" action="Bb2" />
<map key="D" action="F3" />
<map key="F" action="C3" />
<map key="G" action="G3" />
<map key="H" action="D3" />
<map key="J" action="A3" />
<map key="K" action="E3" />
<map key="L" action="B3" />
<map key="semicolon" action="F#3" />
<map key="single-quote" action="C#4" />
<map key="enter" action="G#3" />

<map key="Z" action="Eb2" />
<map key="X" action="Bb1" />
<map key="C" action="F2" />
<map key="V" action="C2" />
<map key="B" action="G2" />
<map key="N" action="D2" />
<map key="M" action="A2" />
<map key="comma" action="E2" />
<map key="period" action="B2" />
<map key="slash" action="F#2" />

</qwertymidi>
